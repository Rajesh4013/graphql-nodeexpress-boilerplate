generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Media {
  mediaId String @id @default(cuid())
  title String
  status String
  mediaType String
  contentType String
  duration Int
  publishDate DateTime
  tags String
  customParameters Json
  images Json[] 
  tracks Json[] 
  assets Json[] 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Playlist {
  playlistId       String   @id @default(uuid()) @unique
  title            String
  type             String
  playlist         Json[]    
  description      String? 
  customParameters Json       
  playlistConfig   Json     @default("{}")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}